# Server Configuration
PORT=3030
NODE_ENV=development

# Database Configuration
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
MONGODB_URI=mongodb://localhost:27017/soundboard

# Rate Limiting
# API rate limit window in milliseconds (default: 30 seconds)
RATE_LIMIT_WINDOW_MS=30000
# Maximum number of requests per window
RATE_LIMIT_MAX_REQUESTS=10

# File Upload Configuration
# Maximum file size in bytes (default: 0.5MB)
MAX_FILE_SIZE=524288

# Session Configuration (for future use)
SESSION_SECRET=your-secret-key-here-change-in-production

# Discord Bot Configuration
# Enable/disable Discord integration
DISCORD_ENABLED=false

# Discord Bot Token - Get this from Discord Developer Portal > Bot > Token
# IMPORTANT: Never share this token publicly!
DISCORD_BOT_TOKEN=your_bot_token_here

# Your Discord Server (Guild) ID
# Enable Developer Mode in Discord, right-click your server → Copy Server ID
DISCORD_GUILD_ID=your_server_id_here

# Voice Channel ID where the bot should join and play audio
# Right-click on voice channel → Copy Channel ID
DISCORD_VOICE_CHANNEL_ID=your_voice_channel_id_here

# Auto-join voice channel on bot startup
DISCORD_AUTO_JOIN=true

