# ============================================
# DISCORD BOT CONFIGURATIE VOORBEELD
# ============================================
# Kopieer deze waarden naar je .env bestand

# Enable Discord integration
DISCORD_ENABLED=true

# Bot Token (van Discord Developer Portal > Bot > Token)
DISCORD_BOT_TOKEN=jouw_bot_token_hier

# Server (Guild) ID (rechtermuisklik op server → Copy Server ID)
DISCORD_GUILD_ID=jouw_server_id_hier

# Voice Channel ID (rechtermuisklik op voice channel → Copy Channel ID)
DISCORD_VOICE_CHANNEL_ID=jouw_channel_id_hier

# Auto-join voice channel bij opstarten
DISCORD_AUTO_JOIN=true

# Volume (0.0 tot 1.0)
DISCORD_VOLUME=0.5
