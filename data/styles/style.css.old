}
.formcontent{
    margin: auto;
    margin-top: 0;
    min-width: 420px;
    max-width: 640px;
    padding: 20px 20px 20px 20px;
    z-index: 10;
    background-color: #7f8c8d;
}


.logo h1 {
    font-family: mina;
    font-weight: bold;
    color: #34495e;
}



.list li {
    list-style-type: none;
}

li {
  float: left;
}

audio {
    display: none;
    margin-left: 0;
}




.soundboard li {
    float: left;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 0.5rem;
    height: 100px;
    width: 320px;
    margin-right: 20px;
    border-radius: 4px;
    margin-bottom: 10px;
}

.soundboard li a {
    background-repeat: no-repeat;
    background-position: center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    max-width: 100%;
    text-align: center;
    text-decoration: none;
}

.soundboard li a img {
    border-radius: 4px;
    position: relative;
    object-fit: cover;
    object-fit: fill;
    max-height: 6rem;
    max-width: 100%;

}

.soundboard li p {
    position: relative;
    font-size: 1rem;
    max-width: 250px;
    margin-left: 110px;
    margin-top: -60px;
    text-align: left;
    font-family: "mina";
    color: #333;
}




.grid-container {
  display: grid;
  grid-template-areas:
    'header header header header header header'
    'main main main main main right';
  grid-gap: 10px;
  padding: 10px 10px 10px 10px;
}


.textContent {
    
    grid-area: header;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 20px;
}

.formFields {
    grid-area: main;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px 10px 10px 10px;
    max-width: 390px;
    min-width: 360px;
}
.submitButton {
    grid-area: right;
}
.playCount {
    position: relative;
    text-align: right;
    margin-right: 10px;
    font-size: 1rem;
    color: #333;
}

input[type=text], select, textarea{
    width: 90%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    resize: vertical;
  }
  label {
    padding: 12px 12px 12px 0;
    display: inline-block;
    font-weight: bold;
  }
  input[type=submit] {
    background-color: #0652DD;
    color: white;
    padding: 12px 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    float: left;
    margin-left: 5px;
    height: 45px;
  }  
  input[type=file] {
    background-color: #0652DD;
    color: white;
    padding: 12px 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    float: left;
    max-width: 250px;
  }  

  .classImage {
      height: 210px;
      width: 220px;
      border-radius: 4px;   
      margin-right: -3px;
  }
  .titlePreview {
    margin-top: 23px;
    padding: 12px 10px;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px 10px 10px 10px;

  }


  