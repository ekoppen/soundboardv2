.wrapper {
    background-color: black;
}

.container {
    margin: auto;
    max-width: 1200px;
    background-color: black;
    margin-top: 80px;
    z-index: 10;
    
}
.errorMessage {
  font-family: "Roboto", sans-serif;
  width: 400px;
